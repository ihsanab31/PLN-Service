<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context="com.sundevs.ihsan.plnservice.fragment.KeluhanFragment">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <com.sundevs.ihsan.plnservice.util.FontLatoSemiBold
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:gravity="left"
                    android:paddingLeft="7dp"
                    android:text="@string/kondisi"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/rdbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/padam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/padam" />

                    <RadioButton
                        android:id="@+id/gangguan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gangguan" />

                    <RadioButton
                        android:id="@+id/mcb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mcb" />

                    <RadioButton
                        android:id="@+id/lpb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lpb" />

                </RadioGroup>

                <EditText
                    android:id="@+id/kon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text16dp"
                    android:background="@drawable/selector_bg_edit_2"
                    android:hint="Kondisi Lainnya"
                    android:inputType="textPersonName"
                    android:paddingBottom="2dp"
                    android:textColor="@color/hitam"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    android:textSize="@dimen/text16dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/foto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="9dp"
                        android:layout_marginTop="11dp"
                        android:padding="5dp" />
                </android.support.v7.widget.CardView>

                <com.sundevs.ihsan.plnservice.util.FontLatoSemiBold
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:text="@string/kotak"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/kel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/btn_shapebiru"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="@string/textbuttonkel"
                    android:textColor="@color/putih" />
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
