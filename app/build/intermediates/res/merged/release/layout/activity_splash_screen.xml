<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/putih"
    android:orientation="vertical"
    tools:context="com.sundevs.ihsan.plnservice.view.SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/ukuran_gambar150dp"
        android:layout_height="@dimen/ukuran_gambar150dp"
        android:src="@drawable/logo" />

    <com.sundevs.ihsan.plnservice.util.FontLatoSemiBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selamat"
        android:textColor="@color/hitam"
        android:textSize="@dimen/text20dp"
        android:layout_marginTop="@dimen/margin9dp"/>
    <com.sundevs.ihsan.plnservice.util.FontLatoSemiBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/versi"
        android:textColor="@color/hitam"
        android:textSize="@dimen/text16dp"/>
</LinearLayout>
